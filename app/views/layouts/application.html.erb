<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <!--<script src="https://kit.fontawesome.com/7c1133ce27.js" crossorigin="anonymous"></script>-->
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="header">

    <nav class="navbar navbar-expand-lg navbar-light bg-dark">
    <div class="container">
    <a class="navbar-brand text-light" href="#">Bookers</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
  <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
    <ul class="navbar-nav ml-auto">
    <% if user_signed_in? %>

              <li class="nav-item ">
                <%= link_to user_path(current_user), class: 'nav-link' do %>
                <span class="text-light">
                  <i class="fas fa-home"></i> Home</span>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to users_path, class: 'nav-link' do %>
                <span class="text-light">
                  <i class="fas fa-users"></i> Users</span>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to books_path, class: 'nav-link' do %>
                <span class="text-light">
                  <i class="fas fa-book-open"></i> Books</span>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to destroy_user_session_path, method: :delete, class: 'nav-link' do %>
                <span class="text-light">
                  <i class="fas fa-sign-out-alt"></i> Log out</span>
                <% end %>
              </li>

    <% else %>
              <li class="nav-item">
                <%= link_to root_path, class: 'nav-link' do %>
                <span class="text-light">
                  <i class="fas fa-home"></i> Home</span>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to home_about_path, class: 'nav-link' do %>
                <span class="text-light">
                <i class="fas fa-link"></i>About</span>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to new_user_registration_path, class: 'nav-link' do %>
                <span class="text-light">
                  <i class="fas fa-user-plus"></i> Sign up</span>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to new_user_session_path, class: 'nav-link' do %>
                <span class="text-light">
                  <i class="fas fa-sign-in-alt"></i> Log in</span>
                <% end %>
              </li>
            <% end %>
          </ul>
  </div>
</nav>
          </div>
  </div>
</nav>
    <main>
      <p class="notice"><%= notice %></p>
    <%= yield %>
<footer>
      <div class='container mt-5'>
  	<div class='row'>
    	<div class='mx-auto'>
    		<p>CopyRight Infratop.inc</p>
    	</div>
    </div>
  </div>
</footer>
      </main>
  </body>
</html>
