 <div class="container">
  <div class="row">
  <div class="col-md-3">
   <% if @book.errors %>
   <ul>
      <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
       <% end %>
       </ul>
      <% end %>
      <%= render 'users/users_info', user: @user %>
      <h2>New book</h2>
      <%= render 'books/book', book: @book %>
    </div>

    <div class=' col-md-8 offset-md-1'>
      <table class="table table-sm book-index">
        <h2>Books</h2>
        <thead>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                 <%= link_to user_path(book.user) do %>
                  <%= image_tag book.user.get_profile_image(100,100) %>
                 <% end %>
              </td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
</div>
</div>
</div>
